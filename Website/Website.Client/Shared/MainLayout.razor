@inherits LayoutComponentBase
@using Website.Client.Design;

<div class="variable-wraper">
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <article class="content px-4">
                @Body
            </article>
            <Button Color="Color.Primary" Clicked="@SetThemeColors">Color</Button>
        </main>
    </div>
</div>


@* Sets css-variables that all components can use. Outside css file to acces state*@
<style>
    .variable-wraper {
        --background: @ViewState.Value.Colors.BackgroundHtml;

        --primary: @ViewState.Value.Colors.PrimaryHtml;
        --secondary: @ViewState.Value.Colors.SecondaryHtml;

        --text-primary: @ViewState.Value.Colors.TextPrimaryHtml;
        --text-secondary: @ViewState.Value.Colors.TextSecondaryHtml;
    }
</style>