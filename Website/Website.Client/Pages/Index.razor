@using Website.Client.Pages.IndexComponents
@page "/"

<PageTitle>Robin Claesson</PageTitle>

@if (ViewState.Value.LayoutSize == LayoutSize.Large)
{
    <Row>
        <Column ColumnSize="ColumnSize.Is6">
            <AboutMeCard />
        </Column>

        <Column ColumnSize="ColumnSize.Is5">
            <ContactCard />
            <TextInfoCard />
        </Column>
    </Row>
}

else
{
    <Row>
        <Column ColumnSize="ColumnSize.Is12">
            <AboutMeCard />
        </Column>
    </Row>
    <Row>
        <Column ColumnSize="ColumnSize.Is12">
            <ContactCard />
        </Column>
    </Row>
    <Row>
        <Column ColumnSize="ColumnSize.Is12">
            <TextInfoCard />
        </Column>
    </Row>
}