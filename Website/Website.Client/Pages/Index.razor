@inherits FluxorComponent
@using Website.Client.Pages.IndexComponents
@page "/"

<PageTitle>Robin Claesson</PageTitle>

@switch (ViewState.Value.LayoutSize)
{
    default:
    case LayoutSize.Large:
        <Row>
            <Column ColumnSize="ColumnSize.Is6">
                <AboutMeCard />
            </Column>

            <Column ColumnSize="ColumnSize.Is5">
                <ContactCard />
                <TextInfoCard />
            </Column>
        </Row>
        break;

    case LayoutSize.Small:
        <Column ColumnSize="ColumnSize.Is12">
            <AboutMeCard />
            <ContactCard />
            <TextInfoCard />
        </Column>
        break;
}