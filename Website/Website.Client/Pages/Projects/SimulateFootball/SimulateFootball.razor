
@page "/projects/SimulateFootball/"

<ProjectMainLayout Title="Simulate Football" GithubLink="https://github.com/RobinClaesson/SimulateFootball" />

@switch (ViewState.Value.LayoutSize)
{
    default:
    case LayoutSize.Large:
        <Row>
            <Column ColumnSize="ColumnSize.Is5">
                <DescrpitionCard />
                <Spacing Height="1rem" />
                <ExampleRunCard />
            </Column>

            <Column ColumnSize="ColumnSize.Is6">
                <Spacing Height="15rem" />
                <StatisticsCard />
            </Column>
        </Row>
        break;
    case LayoutSize.Small:

        <Column ColumnSize="ColumnSize.Is12">
            <DescrpitionCard />
            <StatisticsCard />
            <ExampleRunCard />
        </Column>
        break;
}